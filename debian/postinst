#!/bin/bash
#
# thomas@linuxmuster.net
# 20230725
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in

  configure)

    # install python3 reconfigure
    /usr/bin/python3 -m pip install reconfigure

    # fix netplan default route
    yml="01-netcfg.yaml"
    tpl="/usr/share/linuxmuster/prepare/templates/$yml"
    cfg="/etc/netplan/$yml"
    if [ -e "$cfg" -a -s /var/lib/linuxmuster/setup.ini ]; then
      version="20230725"
      if ! grep -q "# $version" "$cfg"; then
        echo "Fixing default route in $cfg."
        cp "$cfg" "$cfg.bak"
        source /usr/share/linuxmuster/defaults.sh
        iface="$(ip route show | grep ^"$network" | awk '{print $3}')"
        dnssearch="search: [ $domainname ]"
        sed -e "s|@@iface@@|$iface|
                s|@@hostip@@|$hostip|
                s|@@bitmask@@|$bitmask|
                s|@@gateway@@|$gateway|
                s|@@serverip@@|$serverip|
                s|@@firewallip@@|$firewallip|
                s|@@dnssearch@@|$dnssearch|" "$tpl" > "$cfg"
        if ! netplan apply; then
          echo "Rolling back netplan cfg."
          cp "$cfg.bak" "$cfg"
          netplan apply
        fi
      fi
    fi

  ;;

  abort-upgrade|abort-remove|abort-deconfigure) ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1 ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
